# Example .env file for Research System development
# Copy this file to .env and fill in values appropriate for your environment
# -------------------------------------------------

# Environment
RESEARCH_ENV_MODE=development    # Options: development, testing, production

# Application settings
RESEARCH_APP_PORT=8181          # Web application port
RESEARCH_APP_MAX_WORKERS=4      # Number of worker processes

# Logging
RESEARCH_LOG_LEVEL=INFO         # Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database settings
RESEARCH_DB_TYPE=tinydb         # Options: tinydb, postgres
RESEARCH_DB_PATH=data/research.json # TinyDB file path

# PostgreSQL settings (only used if RESEARCH_DB_TYPE=postgres or RESEARCH_DB_USE_POSTGRES=true)
RESEARCH_DB_USE_POSTGRES=false
RESEARCH_DB_HOST=localhost
RESEARCH_DB_PORT=5432
RESEARCH_DB_NAME=research
RESEARCH_DB_USER=postgres
RESEARCH_DB_PASSWORD=postgres
# Alternative: database URL (overrides individual settings)
# RESEARCH_DB_URL=postgresql://postgres:postgres@localhost:5432/research

# LLM settings
RESEARCH_LLM_ENABLED=true
RESEARCH_LLM_MODEL=gemma3:1b
RESEARCH_LLM_URL=http://localhost:11434
RESEARCH_LLM_TIMEOUT=120

# Brave Search API settings
RESEARCH_BRAVE_API_KEY=your_api_key_here

# Legacy environment variables (supported for backward compatibility)
# It's recommended to use the RESEARCH_* prefixed versions above
# PORT=8181
# LOG_LEVEL=INFO
# ENV_MODE=development 
# USE_POSTGRES=false
# DB_POSTGRES_HOST=localhost
# DB_POSTGRES_PORT=5432
# DB_POSTGRES_DBNAME=research
# DB_POSTGRES_USER=postgres
# DB_POSTGRES_PASSWORD=postgres
# OLLAMA_URL=http://localhost:11434
# OLLAMA_MODEL=gemma3:1b
# BRAVE_SEARCH_API_KEY=your_api_key_here